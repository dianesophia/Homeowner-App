@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="mb-4 text-primary text-center">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row justify-content-center">
    <!-- Left Column: Profile Form -->
    <div class="col-md-6">
        <div class="card shadow-lg border-0 rounded-4 p-4">
            <div class="card-body">
                <h5 class="card-title text-center text-secondary mb-4">Edit Profile</h5>
                <form id="profile-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <!-- Username (Read-Only) -->
                    <div class="form-floating mb-3">
                        <input asp-for="Username" class="form-control" placeholder="Your username" disabled />
                        <label asp-for="Username" class="form-label"></label>
                    </div>

                    <!-- Phone Number -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Your phone number" />
                        <label asp-for="Input.PhoneNumber" class="form-label"></label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>

                    <button id="update-profile-button" type="submit" class="btn btn-primary w-100 fw-bold">Save Changes</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Right Column: Profile Picture Upload -->
    <div class="col-md-6 mt-4 mt-md-0">
        <div class="card shadow-lg border-0 rounded-4 p-4 text-center">
            <div class="card-body">
                <h5 class="card-title text-secondary mb-4">Profile Picture</h5>

                <div class="mb-3">
                    @if (Model.Input.ProfilePicture != null)
                    {
                        <img id="profilePicture" class="img-thumbnail rounded-circle shadow-sm"
                             style="width: 180px; height: 180px; object-fit: cover;"
                             src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePicture))">
                    }
                    else
                    {
                        <img id="profilePicture" class="img-thumbnail rounded-circle shadow-sm"
                             style="width: 180px; height: 180px; object-fit: cover;"
                             src="https://via.placeholder.com/180">
                    }
                </div>

                <!-- File Upload -->
                <input type="file" accept=".jpg,.jpeg,.png,.gif"
                       asp-for="Input.ProfilePicture" class="form-control mb-3"
                       onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
                <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>

                <button type="submit" class="btn btn-secondary w-100 fw-bold">Upload New Picture</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
