@model Hometown_Application.Models.VehicleGatepassModel

@{
    ViewData["Title"] = "Delete Vehicle Gatepass";
}

<h1>Delete Vehicle Gatepass</h1>

<h4>Are you sure you want to delete this vehicle gatepass?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Vehicle ID</dt>
        <dd class="col-sm-10">@Model.VehicleId</dd>

        <dt class="col-sm-2">User ID</dt>
        <dd class="col-sm-10">@Model.UserId</dd>

        <dt class="col-sm-2">Vehicle Brand</dt>
        <dd class="col-sm-10">@Model.VehicleBrand</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="VehicleId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "VehicleGatepass")" class="btn btn-secondary">Cancel</a>
</form>
