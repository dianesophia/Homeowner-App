@model Hometown_Application.Models.VehicleGatepassModel

@{
    ViewData["Title"] = "Delete Vehicle Gate Pass";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete the vehicle gate pass for @Model.VehicleBrand?</h3>

<form method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-controller="VehicleGatePass" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
