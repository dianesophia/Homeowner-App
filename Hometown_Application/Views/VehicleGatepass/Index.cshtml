@model IEnumerable<Hometown_Application.Models.VehicleGatepassModel>

@{
    ViewData["Title"] = "Vehicle Gate Passes";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Vehicle Brand</th>
            <th>Added By</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.VehicleBrand</td>
                <td>@item.ApplicationUser.UserName</td>
                <td>
                    <!-- Edit Button to open Modal -->
                    <button class="btn btn-primary" data-toggle="modal" data-target="#actionModal" data-action="edit" data-id="@item.VehicleId" data-vehiclebrand="@item.VehicleBrand" data-user="@item.ApplicationUser.UserName">Edit</button>

                    <!-- Delete Button to open Confirmation Modal -->
                    <button class="btn btn-danger" data-toggle="modal" data-target="#actionModal" data-action="delete" data-id="@item.VehicleId" data-vehiclebrand="@item.VehicleBrand">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Combined Modal for Edit and Delete -->
<div class="modal fade" id="actionModal" tabindex="-1" role="dialog" aria-labelledby="actionModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="actionModalLabel"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="actionForm" method="post">
                <div class="modal-body">
                    <input type="hidden" id="vehicleId" name="VehicleId" />

                    <!-- For Edit -->
                    <div id="editFields" class="form-group">
                        <label for="vehicleBrand">Vehicle Brand</label>
                        <input type="text" id="vehicleBrand" name="VehicleBrand" class="form-control" />
                    </div>

                    <!-- For Delete -->
                    <div id="deleteMessage" class="text-center" style="display: none;">
                        <p>Are you sure you want to delete the vehicle gate pass for <strong id="deleteVehicleBrand"></strong>?</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="submitActionButton"></button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Scripts to populate Modals with data -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script>
    $(document).ready(function () {
        $('#actionModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget); // Button that triggered the modal
            var action = button.data('action'); // Determine if it's edit or delete
            var vehicleId = button.data('id');
            var vehicleBrand = button.data('vehiclebrand');
            var userName = button.data('user');

            var modal = $(this);
            modal.find('#vehicleId').val(vehicleId);

            if (action === "edit") {
                // Set up Edit Modal
                modal.find('.modal-title').text('Edit Vehicle Gate Pass');
                modal.find('#editFields').show();
                modal.find('#deleteMessage').hide();
                modal.find('#vehicleBrand').val(vehicleBrand);
                modal.find('#submitActionButton').text('Save Changes');
                modal.find('#actionForm').attr('action', '@Url.Action("Edit", "VehicleGatePass")/' + vehicleId); // Ensure this targets the Edit action with VehicleId
            } else if (action === "delete") {
                // Set up Delete Modal
                modal.find('.modal-title').text('Delete Vehicle Gate Pass');
                modal.find('#editFields').hide();
                modal.find('#deleteMessage').show();
                modal.find('#deleteVehicleBrand').text(vehicleBrand);
                modal.find('#submitActionButton').text('Delete');
                modal.find('#actionForm').attr('action', '@Url.Action("DeleteConfirmed", "VehicleGatePass")/' + vehicleId); // Ensure this targets the DeleteConfirmed action with VehicleId
            }
        });
    });
</script>
