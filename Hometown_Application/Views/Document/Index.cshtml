@model IEnumerable<Hometown_Application.Models.DocumentModel>
@using Hometown_Application.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "File Upload and Download";
}

<style>
    :root {
        --primary-color: #6F754E;
        --primary-light: #8a916a;
        --primary-dark: #5a6040;
        --secondary-color: #A08D67;
        --secondary-light: #b8a787;
        --background-color: #E6DDC4;
        --text-color: #2F3A31;
        --card-bg: #FFFFFF;
        --danger-color: #dc3545;
        --success-color: #198754;
        --warning-color: #ffc107;
        --info-color: #0dcaf0;
        --white: #FFFFFF;
        --error: #dc3545;
        --success: #28a745;
        --border-radius: 16px;
        --shadow: 0px 6px 12px rgba(0, 0, 0, 0.1);
        --transition: all 0.3s ease;
    }

    .navbar {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        background-color: var(--primary-color);
        box-shadow: var(--shadow);
        z-index: 1000;
        min-height: 100px;
        padding: 15px 20px;
        font-family: 'Marcellus', serif;
    }

    .navbar-brand {
        font-size: 1.2rem;
        font-weight: normal;
        color: white;
    }

        .navbar-brand:hover {
            transform: scale(1.05);
        }

    .navbar-nav .nav-link {
        color: white;
        font-weight: 500;
        margin: 0 10px;
        padding: 8px 16px;
        border-radius: var(--border-radius);
        transition: var(--transition);
    }

        .navbar-nav .nav-link:hover {
            background: var(--primary-light);
            color: white;
            transform: translateY(-2px);
        }

    .user-info {
        background: var(--primary-light);
        padding: 8px 16px;
        border-radius: var(--border-radius);
        display: flex;
        align-items: center;
        gap: 8px;
        backdrop-filter: blur(5px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

        .user-info i {
            font-size: 1.2rem;
        }
    .page-title {
        font-size: 2.2rem;
        color: var(--text-color);
        margin-bottom: 1.5rem;
        font-weight: 600;
        position: relative;
        padding-bottom: 8px;
    }

        .page-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 80px;
            height: 3px;
            background-color: var(--primary-color);
            border-radius: 3px;
        }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: auto;
    }

    .page-subtitle {
        color: var(--secondary-color);
        font-size: 1.1rem;
    }

    .file-upload-container {
        width: 100%;
        margin: 0 auto;
        background-color: white;
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        padding: 25px;
        margin-bottom: 2rem;
        display: flex;
        flex-direction: column;   
    }


    .file-upload-header {
        background-color: var(--primary-color);
        color: white;
        padding: 15px;
        text-align: center;
        border-radius: var(--border-radius) var(--border-radius) 0 0;
        margin-bottom: 20px;
    }

        .file-upload-header h2 {
            margin: 0;
            font-size: 1.5rem;
        }

    .file-upload-form {
        display: flex;
        flex-direction: column;
        gap: 15px;
        margin-bottom: 30px;
        width: 100%;
        max-width: 600px;
    }

        .file-upload-form

    {
        flex-direction: row;
    }

    .file-input {
        flex-grow: 1;
        padding: 10px;
        border: 2px dashed var(--primary-light);
        border-radius: var(--border-radius);
        transition: var(--transition);
    }

        .file-input:hover {
            border-color: var(--primary-color);
        }

    .upload-btn {
        background-color: var(--secondary-color);
        color: white;
        border: none;
        border-radius: var(--border-radius);
        padding: 12px 24px;
        font-weight: 500;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
        box-shadow: 0 3px 6px rgba(0,0,0,0.1);
    }

        .upload-btn:hover {
            background-color: var(--secondary-light);
            transform: translateY(-2px);
            color: var(--primary-color);
            box-shadow: 0 5px 12px rgba(0,0,0,0.15);
        }

    .upload-btn i {
        font-size: 1.1rem;
    }

    .message {
        padding: 15px;
        border-radius: var(--border-radius);
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        font-weight: bold;
        position: relative;
        width: 100%;
        margin-bottom: 20px;
    }

    .error-message {
        color: var(--error);
        font-weight: bold;
        background: rgba(220, 53, 69, 0.1);
        padding: 10px;
        border: 1px solid var(--error);
        border-radius: var(--border-radius);
        margin-bottom: 20px;
        text-align: center;
        width: 100%;
    }

    .success-message {
        color: var(--success);
        font-weight: bold;
        background: rgba(40, 167, 69, 0.1);
        padding: 10px;
        border: 1px solid var(--success);
        border-radius: var(--border-radius);
        margin-bottom: 20px;
        text-align: center;
        width: 100%;
    }

    .documents-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        border-radius: var(--border-radius);
        overflow: hidden;
        box-shadow: var(--shadow);
        margin-top: 20px;
    }

        .documents-table th {
            background-color: var(--primary-color);
            color: white;
            padding: 12px;
            text-align: left;
            --text-color:white;
        }

        .documents-table tr:nth-child(even) {
            background-color: var(--background-color);
        }

        .documents-table tr:nth-child(odd) {
            background-color: white;
        }

        .documents-table td {
            padding: 12px;
            border-bottom: white;
        }

    .document-actions a {
        color: var(--primary-color);
        text-decoration: none;
        margin-right: 10px;
        transition: var(--transition);
    }

        .document-actions a:hover {
            color: var(--primary-dark);
            text-decoration: underline;
        }

    .text-center {
        text-align: center;
    }

    .error-message {
        color: var(--error);
        font-weight: bold;
        background: rgba(220, 53, 69, 0.1);
        padding: 10px;
        border: 1px solid var(--error);
        border-radius: var(--border-radius);
        margin-bottom: 20px;
        text-align: center;
    }

    .success-message {
        color: var(--success);
        font-weight: bold;
        background: rgba(40, 167, 69, 0.1);
        padding: 10px;
        border: 1px solid var(--success);
        border-radius: var(--border-radius);
        margin-bottom: 20px;
        text-align: center;
    }

    .documents-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        border-radius: var(--border-radius);
        overflow: hidden;
        box-shadow: var(--shadow);
    }

        .documents-table th {
            background-color: var(--primary-color);
            color: var(--white);
            padding: 12px;
            text-align: left;
        }

        .documents-table tr:nth-child(even) {
            background-color: var(--background-color);
        }

        .documents-table tr:nth-child(odd) {
            background-color: var(--white);
        }

        .documents-table td {
            padding: 12px;
            border-bottom: 1px solid var(--primary-light);
        }

    .document-actions a {
        color: var(--primary-color);
        text-decoration: none;
        margin-right: 10px;
        transition: var(--transition);
    }

        .document-actions a:hover {
            color: var(--primary-dark);
            text-decoration: underline;
        }


    .file-input, .upload-btn {
        width: 100%;
    }

</style>
<div class="content">
    <div class="page-header">
        <div>
            <h1 class="page-title">Upload or Download Documents</h1>
        </div>
        <!--<div class="buttons-container">
            <a href="/reports" class="action-button">
                <i class="fas fa-chart-bar"></i> View Reports
            </a>
        </div>-->
    </div>
    <div class="file-upload-container">
        @using (Html.BeginForm("UploadFiles", "Document", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            if (TempData["Message"] != null)
            {
                <p class="@(TempData["MessageType"] != null && TempData["MessageType"].ToString() == "success" ? "success-message" : "error-message")">
                    ⚠️ @TempData["Message"]
                </p>
            }
                <div class="file-upload-form">
                    <input type="file" name="files" id="files" multiple class="file-input" />
                    <input type="submit" class="upload-btn" value="Upload" />
                </div>
        }

            <table class="documents-table">
                <thead>
                    <tr>
                        <th>Document Name</th>
                        <th>File Size</th>
                        <th>Document Type</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.DocumentName</td>
                                <td>@item.FileSize KB</td>
                                <td>@item.DocumentType</td>
                                <td class="document-actions">
                                    <a href="@Url.Action("Download", "Document", new { fileName = item.DocumentName })">
                                        Download
                                    </a>
                                    <a asp-action="DeleteDocument" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center">
                                No files uploaded yet.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
    </div>
</div>