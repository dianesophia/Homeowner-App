@model IEnumerable<Hometown_Application.Models.FacilityModel>

@{
    ViewData["Title"] = "Facilities";
}

<h2>Facilities</h2>

<p>
    <a asp-action="CreateOrEditFacility" class="btn btn-success">Create New Facility</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Type</th>
            <th>Capacity</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    @if (item.Image != null && item.Image.Length > 0)
                    {
                        var base64Image = Convert.ToBase64String(item.Image);
                        var imageSrc = $"data:image/png;base64,{base64Image}"; // Change 'png' if needed

                        <img src="@imageSrc" alt="Facility Image" class="img-thumbnail" style="max-width: 80px; height: 80px; object-fit: cover;" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>

                <td>@item.Name</td>
                <td>
                    @if (item.Type == "Other" && !string.IsNullOrEmpty(item.OtherType))
                    {
                        @item.OtherType
                    }
                    else
                    {
                        @item.Type
                    }
                </td>
                <td>@item.Capacity</td>
                <td>@(string.IsNullOrEmpty(item.Description) ? "No description provided" : item.Description)</td>
                <td>
                    <a asp-action="CreateOrEditFacility" asp-route-id="@item.FacilityId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.FacilityId" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this facility?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
