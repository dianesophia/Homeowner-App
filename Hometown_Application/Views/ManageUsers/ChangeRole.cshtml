@model IEnumerable<(Hometown_Application.Areas.Identity.Data.ApplicationUser User, string Role)>

<h1>Change User Role</h1>
<a asp-controller="ManageUsers" asp-action="Index" class="btn btn-secondary">Back</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Username</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.User.FirstName</td>
                <td>@item.User.LastName</td>
                <td>@item.User.Email</td>
                <td>@item.User.UserName</td>
                <td>
               
                    <form asp-action="ChangeRole" method="post" class="d-flex align-items-center gap-2">
                        <input type="hidden" name="userId" value="@item.User.Id" />

                        <select name="newRole" class="form-select">
                            <option selected disabled>@item.Role</option>
                                @if (item.Role != "Staff")
                                {
                                <option value="Staff">Staff</option>
                                }
                                @if (item.Role != "Admin")
                                {
                                <option value="Admin">Admin</option>
                                }
                                @if (item.Role != "HomeOwner")
                                {
                                <option value="HomeOwner">Home Owner</option>
                                }
                        </select>

                        <button type="submit" class="btn btn-primary">Change</button>
                    </form>
               


                </td>
            </tr>
        }
    </tbody>
</table>

