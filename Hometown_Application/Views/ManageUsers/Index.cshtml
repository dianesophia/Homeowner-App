@model IEnumerable<(Hometown_Application.Areas.Identity.Data.ApplicationUser User, string Role)>
@using Hometown_Application.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <style>
        :root {
            --primary-color: #6F754E;
            --primary-light: #8a916a;
            --secondary-color: #A08D67;
            --background-color: #E6DDC4;
            --text-color: #2F3A31;
            --card-bg: #FFFFFF;
            --danger-color: #dc3545;
            --success-color: #198754;
            --border-radius: 16px;
            --shadow: 0px 6px 12px rgba(0, 0, 0, 0.1);
            --transition: all 0.3s ease;
        }

        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
            background-color: var(--background-color);
            color: var(--text-color);
        }

        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background-color: var(--primary-color);
            box-shadow: var(--shadow);
            z-index: 1000;
            min-height: 100px;
            padding: 15px 20px;
        }

        .navbar-brand {
            font-size: 1.2rem;
            font-weight: normal;
            color: white;
            padding-left: 12px;
        }

            .navbar-brand:hover {
                transform: scale(1.05);
            }

        .navbar-nav .nav-link {
            color: white;
            font-weight: 500;
            margin: 0 10px;
            padding: 8px 16px;
            border-radius: var(--border-radius);
            transition: var(--transition);
        }

            .navbar-nav .nav-link:hover {
                background: var(--primary-light);
                color: white;
                transform: translateY(-2px);
            }

        .content {
            padding: 100px 40px 40px;
            width: 100%;
            max-width: 1400px;
            margin: 0 auto;
        }

        .users-table {
            background-color: var(--card-bg);
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            overflow: hidden;
        }

        .table thead {
            background-color: var(--primary-color);
            color: white;
        }

        .role-badge {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 120px;
            height: 40px;
            border-radius: 20px;
            font-weight: 500;
        }

        .role-admin {
            background-color: var(--danger-color);
            color: white;
        }

        .role-user {
            background-color: var(--primary-light);
            color: white;
        }
    </style>

</head>
<body>
    <div class="content">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Manage Users</h1>
            <a asp-controller="ManageUsers" asp-action="ChangeRole" class="btn btn-secondary">
                <i class="fas fa-user-cog"></i> Change Role
            </a>

            <a asp-controller="ManageUsers" asp-action="AccountApproval" class="btn btn-secondary">
                <i class="fas fa-user-cog"></i> Approve Homeowner
            </a>
        </div>

        <ul class="nav nav-tabs" id="userTabs">
            <li class="nav-item">
                <a class="nav-link" id="admin-tab" data-bs-toggle="tab" href="#admins">Admins</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" id="homeowner-tab" data-bs-toggle="tab" href="#homeowners">Homeowners</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="staff-tab" data-bs-toggle="tab" href="#staff">Staff</a>
            </li>
        </ul>

        <div class="tab-content mt-3">
            <!-- Homeowners Tab -->
            <div class="tab-pane fade show active" id="homeowners">
                <div class="users-table table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>Username</th>
                                <th>Approved</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Where(u => u.Role == "HomeOwner").OrderBy(u => u.User.FirstName))
                            {
                                <tr>
                                    <td>@item.User.FirstName</td>
                                    <td>@item.User.LastName</td>
                                    <td>@item.User.Email</td>
                                    <td>@item.User.UserName</td>
                                    <td></td>
                                </tr>
                            }
                        </tbody> 
                    </table>
                </div>
            </div>

            <!-- Admins Tab -->
            <div class="tab-pane fade" id="admins">
                <div class="users-table table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>Username</th>
                                <th>Role</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Where(u => u.Role == "Admin").OrderBy(u => u.User.FirstName))
                            {
                                <tr>
                                    <td>@item.User.FirstName</td>
                                    <td>@item.User.LastName</td>
                                    <td>@item.User.Email</td>
                                    <td>@item.User.UserName</td>
                                    <td><span class="role-badge role-admin">@item.Role</span></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Staff Tab -->
            <div class="tab-pane fade" id="staff">
                <div class="users-table table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>Username</th>
                                <th>Role</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Where(u => u.Role == "Staff").OrderBy(u => u.User.FirstName))
                            {
                                <tr>
                                    <td>@item.User.FirstName</td>
                                    <td>@item.User.LastName</td>
                                    <td>@item.User.Email</td>
                                    <td>@item.User.UserName</td>
                                    <td><span class="role-badge role-user">@item.Role</span></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>


        </div>
    </div>
   

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
