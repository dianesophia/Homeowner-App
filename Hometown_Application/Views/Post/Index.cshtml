@model IEnumerable<Hometown_Application.Models.PostModel>

<style>
    :root {
        --primary-color: #6F754E;
        --primary-light: #8a916a;
        --primary-dark: #5a6040;
        --secondary-color: #A08D67;
        --secondary-light: #b8a787;
        --background-color: #E6DDC4;
        --text-color: #2F3A31;
        --card-bg: #FFFFFF;
        --danger-color: #dc3545;
        --success-color: #198754;
        --warning-color: #ffc107;
        --info-color: #0dcaf0;
        --border-radius: 16px;
        --shadow: 0px 6px 12px rgba(0, 0, 0, 0.1);
        --transition: all 0.3s ease;
    }

    /* Section Header */
    .section-header {
        font-size: 1.8rem;
        color: var(--text-color);
        margin-bottom: 20px;
        position: relative;
        padding-bottom: 8px;
    }

        .section-header::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 60px;
            height: 3px;
            background-color: var(--primary-color);
            border-radius: 3px;
        }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        gap: 20px;
    }

    .page-subtitle {
        color: var(--secondary-color);
        font-size: 1.1rem;
    }

    /* Create Post Button */
    .create-btn {
        background-color: var(--primary-color);
        color: white;
        border-radius: var(--border-radius);
        padding: 8px 16px;
        transition: var(--transition);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        border: none;
    }

        .create-btn:hover {
            background-color: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
            color: white;
        }

    /* Forum Posts */
    .forum-posts {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-bottom: 2rem;
    }

    .forum-post {
        background-color: var(--card-bg);
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        transition: var(--transition);
        border: 1px solid rgba(0, 0, 0, 0.03);
        overflow: hidden;
    }

        .forum-post:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 20px rgba(0, 0, 0, 0.1);
        }

    .forum-post-content {
        padding: 20px;
    }

    /* Post Title */
    .forum-post-title {
        font-size: 1.2rem;
        color: var(--text-color);
        margin-bottom: 15px;
        font-weight: 600;
    }

        .forum-post-title a {
            color: var(--text-color);
            text-decoration: none;
            transition: var(--transition);
        }

            .forum-post-title a:hover {
                color: var(--primary-color);
            }

    /* Post Image */
    .post-image {
        margin: 15px 0;
    }

        .post-image img {
            max-width: 100%;
            height: auto;
            border-radius: 10px;
            object-fit: cover;
        }

    /* Post Preview */
    .post-preview {
        color: #666;
        margin: 15px 0;
        line-height: 1.6;
    }

    .read-more {
        color: var(--primary-color);
        font-weight: 500;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 4px;
    }

        .read-more:hover {
            text-decoration: underline;
        }

    /* Post Metadata */
    .post-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        color: #777;
        font-size: 0.85rem;
        margin: 15px 0;
    }

    .post-author, .post-date {
        display: flex;
        align-items: center;
        gap: 5px;
    }

        .post-author i, .post-date i {
            color: var(--secondary-color);
        }

    /* Post Reactions */
    .post-reactions {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        padding-top: 15px;
        border-top: 1px solid rgba(0, 0, 0, 0.05);
    }

    .reaction {
        display: flex;
        align-items: center;
        gap: 5px;
        font-size: 0.9rem;
        color: #666;
        transition: var(--transition);
        padding: 4px 8px;
        border-radius: 20px;
    }

        .reaction:hover {
            background-color: rgba(0, 0, 0, 0.05);
            transform: translateY(-2px);
        }

        .reaction i {
            transition: var(--transition);
        }

        .reaction:nth-child(1) i {
            color: #e74c3c;
        }
        /* Love */
        .reaction:nth-child(2) i {
            color: var(--primary-color);
        }
        /* Like */
        .reaction:nth-child(3) i {
            color: #f39c12;
        }
        /* Haha */
        .reaction:nth-child(4) i {
            color: #3498db;
        }
        /* Wow */
        .reaction:nth-child(5) i {
            color: #9b59b6;
        }
        /* Sad */
        .reaction:nth-child(6) i {
            color: #e74c3c;
        }
        /* Angry */
        .reaction:nth-child(7) i {
            color: var(--secondary-color);
        }
        /* Comments */

        .reaction:hover i {
            transform: scale(1.2);
        }
</style>

<div class="container">
    <!-- Page Header -->
    <div class="page-header">
        <div>
            <h1 class="section-header">Community Forum</h1>
            <p class="page-subtitle">Join the conversation and connect with your community</p>
        </div>
        <div>
            <a asp-action="Create" class="create-btn">
                <i class="fas fa-plus-circle"></i> Create New Post
            </a>
        </div>
    </div>

    <div class="forum-posts">
        @foreach (var post in Model)
        {
            <div class="forum-post">
                <div class="forum-post-content">
                    <!-- Post Title -->
                    <h4 class="forum-post-title">
                        <a asp-action="Details" asp-route-id="@post.PostId">
                            @post.Title
                        </a>
                    </h4>

                    <!-- Post Image -->
                    @if (post.Image != null)
                    {
                        <div class="post-image">
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(post.Image)" alt="Post Image" />
                        </div>
                    }

                    <!-- Post Content Preview -->
                    <p class="post-preview">
                        @if (post.Content.Length > 200)
                        {
                            @(post.Content.Substring(0, 200))
                            <span>...</span>
                            <a asp-action="Details" asp-route-id="@post.PostId" class="read-more">
                                Read More <i class="fas fa-arrow-right"></i>
                            </a>
                        }
                        else
                        {
                            @post.Content
                        }
                    </p>

                    <!-- Post Metadata -->
                    <div class="post-meta">
                        <span class="post-author">
                            <i class="fas fa-user"></i> @post.ApplicationUser.FirstName
                        </span>
                        <span class="post-date">
                            <i class="fas fa-calendar-alt"></i> @post.AddedOn.ToString("MMMM dd, yyyy")
                        </span>
                    </div>

                    <!-- Reactions and Comments -->
                    <div class="post-reactions">
                        @{
                            int loveCount = 0;
                            int likeCount = 0;
                            int hahaCount = 0;
                            int wowCount = 0;
                            int sadCount = 0;
                            int angryCount = 0;

                            foreach (var reaction in post.Reactions)
                            {
                                switch (reaction.Type)
                                {
                                    case "Love": loveCount++; break;
                                    case "Like": likeCount++; break;
                                    case "Haha": hahaCount++; break;
                                    case "Wow": wowCount++; break;
                                    case "Sad": sadCount++; break;
                                    case "Angry": angryCount++; break;
                                }
                            }
                        }
                        <span class="reaction"><i class="fas fa-heart"></i> @loveCount</span>
                        <span class="reaction"><i class="fas fa-thumbs-up"></i> @likeCount</span>
                        <span class="reaction"><i class="fas fa-laugh"></i> @hahaCount</span>
                        <span class="reaction"><i class="fas fa-surprise"></i> @wowCount</span>
                        <span class="reaction"><i class="fas fa-sad-tear"></i> @sadCount</span>
                        <span class="reaction"><i class="fas fa-angry"></i> @angryCount</span>
                        <span class="reaction"><i class="fas fa-comment"></i> @post.Comments.Count</span>
                    </div>
                </div>
            </div>
        }
    </div>
</div>