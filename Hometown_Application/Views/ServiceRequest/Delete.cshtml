@model Hometown_Application.Models.ServiceRequestModel

@{
    ViewData["Title"] = "Delete Service Request";
}

<h2>Delete Service Request</h2>

<h3>Are you sure you want to delete this request?</h3>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.RequestType?.Name</h5>
        <p><strong>Details:</strong> @Model.Details</p>
        <p><strong>Location:</strong> @Model.Location</p>
        <p><strong>Urgency:</strong> @Model.Urgency</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Schedule:</strong> @Model.Schedule.ToString("MMMM dd, yyyy hh:mm tt")</p>
        <p>
            <strong>Status:</strong>
            <span class="badge @(Model.Status?.StatusName == "Completed" ? "bg-success" : "bg-warning")">
                @Model.Status?.StatusName
            </span>
        </p>
    </div>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.ServiceRequestId" />
    <button type="submit" class="btn btn-danger mt-3">Delete</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>