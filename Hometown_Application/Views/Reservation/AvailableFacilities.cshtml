@model IEnumerable<Hometown_Application.Models.FacilityViewModel>
@{
    ViewData["Title"] = "Available Facilities";
}

<style>
    :root {
        --primary-color: #6F754E;
        --primary-light: #8a916a;
        --primary-dark: #5a6040;
        --secondary-color: #A08D67;
        --secondary-light: #b8a787;
        --background-color: #E6DDC4;
        --text-color: #2F3A31;
        --card-bg: #FFFFFF;
        --danger-color: #dc3545;
        --success-color: #198754;
        --warning-color: #ffc107;
        --info-color: #0dcaf0;
        --border-radius: 16px;
        --shadow: 0px 6px 12px rgba(0, 0, 0, 0.1);
        --transition: all 0.3s ease;
    }

    .page-title {
        font-size: 2.2rem;
        color: var(--text-color);
        margin-bottom: 1.5rem;
        font-weight: 600;
        position: relative;
        padding-bottom: 8px;
    }

        .page-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 80px;
            height: 3px;
            background-color: var(--primary-color);
            border-radius: 3px;
        }

    .facility-table-container {
        width: 100%;
        max-width: 1200px;
        margin: 2rem auto;
        background-color: var(--card-bg);
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        padding: 25px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 1rem;
    }

        .table th,
        .table td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: var(--primary-color);
            color: white;
            font-weight: 600;
            text-transform: uppercase;
        }

        .table td {
            color: var(--text-color);
        }

    .facility-image {
        max-width: 50px;
        max-height: 50px;
        border-radius: 8px;
        object-fit: cover;
    }

    .status-available {
        color: var(--success-color);
        font-weight: 500;
    }

    .status-not-available {
        color: var(--danger-color);
        font-weight: 500;
    }

    .btn {
        font-weight: 500;
        border-radius: 8px;
        padding: 8px 16px;
        transition: var(--transition);
        cursor: pointer;
    }

    .btn-reserve {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
    }

        .btn-reserve:hover {
            background-color: #5a6268;
            border-color: #545b62;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
</style>

<div class="content">
    <div class="page-header">
        <div>
            <h1 class="page-title">Facilities</h1>
        </div>
    </div>

    <div class="facility-table-container">
        <form asp-action="AvailableFacilities" method="get">
            <div class="form-group">
                <input type="text" name="searchString" class="form-control" placeholder="Enter facility name..." value="@ViewData["CurrentFilter"]" />
            </div>
        </form>

        <table class="table">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Capacity</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (item.Facility.Image != null && item.Facility.Image.Length > 0)
                            {
                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Facility.Image)" alt="@item.Facility.Name" class="facility-image" />
                            }
                            else
                            {
                                <span>No Image</span>
                            }
                        </td>
                        <td>@item.Facility.Name</td>
                        <td>@item.Facility.Type</td>
                        <td>@item.Facility.Capacity</td>
                        <td>
                            @if (item.Facility.IsAvailable)
                            {
                                <span class="status-available">Available</span>
                            }
                            else
                            {
                                <span class="status-not-available">Not Available</span>
                            }
                        </td>
                        <td>
                            <a asp-action="CreateOrEdit" asp-route-facilityId="@item.Facility.FacilityId" class="btn btn-reserve">Reserve</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>