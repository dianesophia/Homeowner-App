@model IEnumerable<Hometown_Application.Models.ReservationModel>

<h2>Manage Reservations</h2>

<table class="table">
    <thead>
        <tr>
            <th>User</th>
            <th>Facility</th>
            <th>Status</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Update Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var res in Model)
        {
            <tr>
                <td>@res.UserId</td>
                <td>@res.Facility</td>
                <td>@res.Status</td>
                <td>@res.StartTime</td>
                <td>@res.EndTime</td>
                <td>
                    <a asp-action="UpdateStatus" asp-route-id="@res.Id" asp-route-status="Approved">Approve</a> |
                    <a asp-action="UpdateStatus" asp-route-id="@res.Id" asp-route-status="Rejected">Reject</a>
                </td>
            </tr>
        }
    </tbody>
</table>
