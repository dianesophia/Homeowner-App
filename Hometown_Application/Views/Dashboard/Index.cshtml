@{
    ViewData["Title"] = "Dashboard";
}

@model Hometown_Application.Models.DashboardViewModel
@using Hometown_Application.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<style>
    :root {
        --primary-color: #6F754E;
        --primary-light: #8a916a;
        --primary-dark: #5a6040;
        --secondary-color: #A08D67;
        --secondary-light: #b8a787;
        --background-color: #E6DDC4;
        --text-color: #2F3A31;
        --card-bg: #FFFFFF;
        --danger-color: #dc3545;
        --success-color: #198754;
        --warning-color: #ffc107;
        --info-color: #0dcaf0;
        --border-radius: 16px;
        --shadow: 0px 6px 12px rgba(0, 0, 0, 0.1);
        --transition: all 0.3s ease;
    }

    .navbar {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        background-color: var(--primary-color);
        box-shadow: var(--shadow);
        z-index: 1000;
        min-height: 100px;
        padding: 15px 20px;
        font-family: 'Marcellus', serif;
    }

    .navbar-brand {
        font-size: 1.2rem;
        font-weight: normal;
        color: white;
    }

        .navbar-brand:hover {
            transform: scale(1.05);
        }

    .navbar-nav .nav-link {
        color: white;
        font-weight: 500;
        margin: 0 10px;
        padding: 8px 16px;
        border-radius: var(--border-radius);
        transition: var(--transition);
    }

        .navbar-nav .nav-link:hover {
            background: var(--primary-light);
            color: white;
            transform: translateY(-2px);
        }

    .user-info {
        background: var(--primary-light);
        padding: 8px 16px;
        border-radius: var(--border-radius);
        display: flex;
        align-items: center;
        gap: 8px;
        backdrop-filter: blur(5px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

        .user-info i {
            font-size: 1.2rem;
        }

    .page-title {
        font-size: 2.2rem;
        color: var(--text-color);
        margin-bottom: 1.5rem;
        font-weight: 600;
        position: relative;
        padding-bottom: 8px;
    }

        .page-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 80px;
            height: 3px;
            background-color: var(--primary-color);
            border-radius: 3px;
        }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: auto;
    }

    .page-subtitle {
        color: var(--secondary-color);
        font-size: 1.1rem;
    }

    .stat-cards-container {
        display: flex;
        flex-wrap: nowrap;
        justify-content: space-between;
        margin-bottom: 2rem;
        overflow-x: auto;
        gap: 20px;
    }

    .stat-card {
        background-color: var(--card-bg);
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        padding: 15px 20px;
        transition: var(--transition);
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: flex-start;
        gap: 15px;
        flex-grow: 1;
        flex: 1;
        max-width: 30%;
        min-width: 200px;
        position: relative;
    }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
        }

        .stat-card.users::before {
            background-color: var(--info-color);
        }

        .stat-card.issues::before {
            background-color: var(--danger-color);
        }

        .stat-card.documents::before {
            background-color: var(--success-color);
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

    .stat-icon {
        font-size: 1.5rem;
        background-color: rgba(0,0,0,0.05);
        width: 50px;
        height: 50px;
        min-width: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
    }

    .users-icon {
        color: var(--info-color);
    }

    .issues-icon {
        color: var(--danger-color);
    }

    .documents-icon {
        color: var(--success-color);
    }

    .stat-text {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

    .stat-number {
        font-size: 1.8rem;
        font-weight: 700;
        line-height: 1;
        color: var(--text-color);
        margin: 0;
    }

    .stat-label {
        font-size: 0.9rem;
        color: #666;
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .stat-trend {
        font-size: 0.85rem;
        display: flex;
        align-items: center;
        gap: 5px;
        margin-top: 5px;
    }

    .trend-up {
        color: var(--success-color);
    }

    .trend-down {
        color: var(--danger-color);
    }

    .quick-actions {
        margin-top: 40px;
        margin-bottom: 10rem;
    }

        .quick-actions h2 {
            font-size: 1.8rem;
            color: var(--text-color);
            margin-bottom: 30px;
            position: relative;
            padding-bottom: 8px;
        }

            .quick-actions h2::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 60px;
                height: 3px;
                background-color: var(--primary-color);
                border-radius: 3px;
            }

    .action-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 25px;
        margin-bottom: 2rem;
    }

    .action-card {
        background: var(--card-bg);
        padding: 25px 20px;
        border-radius: var(--border-radius);
        text-align: center;
        transition: var(--transition);
        box-shadow: var(--shadow);
        cursor: pointer;
        text-decoration: none;
        color: var(--text-color);
        position: relative;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        align-items: center;
        border: 1px solid rgba(0, 0, 0, 0.03);
    }

        .action-card:before {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: var(--primary-color);
            transform: scaleX(0);
            transition: transform 0.4s cubic-bezier(0.215, 0.61, 0.355, 1);
            transform-origin: right;
        }

        .action-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 12px 20px rgba(0, 0, 0, 0.1);
            color: var(--text-color);
        }

            .action-card:hover:before {
                transform: scaleX(1);
                transform-origin: left;
            }

            .action-card:hover .action-icon {
                color: var(--primary-color);
                transform: translateY(-5px) scale(1.1);
            }

    .action-icon {
        font-size: 2rem;
        color: var(--secondary-color);
        transition: all 0.4s cubic-bezier(0.215, 0.61, 0.355, 1);
        height: 60px;
        width: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgba(0,0,0,0.03);
        border-radius: 50%;
        margin-bottom: 15px;
    }

    .action-card h3 {
        font-size: 1.2rem;
        font-weight: 500;
        margin-bottom: 10px;
        transition: var(--transition);
    }

    .action-desc {
        font-size: 0.9rem;
        color: #666;
        margin-top: 0;
    }

    /* Recent Activity Section */
    .recent-activity {
        background-color: var(--card-bg);
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        padding: 25px;
        margin-bottom: 80px;
    }

        .recent-activity h2 {
            font-size: 1.8rem;
            color: var(--text-color);
            margin-bottom: 20px;
            position: relative;
            padding-bottom: 8px;
        }

            .recent-activity h2::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 60px;
                height: 3px;
                background-color: var(--primary-color);
                border-radius: 3px;
            }

    .activity-item {
        display: flex;
        align-items: flex-start;
        padding: 15px 0;
        border-bottom: 1px solid rgba(0,0,0,0.05);
    }

        .activity-item:last-child {
            border-bottom: none;
        }

    .activity-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        flex-shrink: 0;
    }

    .activity-issue {
        background-color: rgba(220, 53, 69, 0.1);
        color: var(--danger-color);
    }

    .activity-document {
        background-color: rgba(25, 135, 84, 0.1);
        color: var(--success-color);
    }

    .activity-event {
        background-color: rgba(13, 202, 240, 0.1);
        color: var(--info-color);
    }

    .activity-content {
        flex-grow: 1;
    }

        .activity-content h4 {
            font-size: 1rem;
            margin: 0 0 5px 0;
        }

    .activity-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .activity-time {
        font-size: 0.85rem;
        color: #777;
    }

    .activity-user {
        font-size: 0.85rem;
        font-weight: 500;
    }

    /* Media queries for responsive design */
        .stat-cards-container

    {
        flex-wrap: wrap;
    }

    .stat-card {
        max-width: 45%;
    }

        .stat-card

    {
        max-width: 100%;
    }

    .page-header {
        flex-direction: column;
        align-items: flex-start;
    }

    .forum-post {
        padding: 20px;
        border-radius: var(--border-radius);
        background-color: rgba(255, 255, 255, 0.7);
        margin-bottom: 15px;
        border-left: 4px solid var(--primary-color);
        transition: var(--transition);
    }

        .forum-post:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.08);
        }

    .post-content h4 {
        font-size: 1.2rem;
        margin-bottom: 10px;
    }

        .post-content h4 a:hover {
            color: var(--primary-color);
        }

    .post-preview {
        line-height: 1.5;
    }

    .post-interactions span {
        font-size: 0.9rem;
    }

    /* Create New Post Button Hover Effect */
    .text-end .btn:hover {
        background-color: var(--primary-dark);
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
    }

</style>

<div class="content">
    <!-- Page Header -->
    <div class="page-header">
        <div>
            <h1 class="page-title">Dashboard</h1>
            <p class="page-subtitle">Welcome back! Here's your overview</p>
        </div>
        <!--<div class="buttons-container">
            <a href="/reports" class="action-button">
                <i class="fas fa-chart-bar"></i> View Reports
            </a>
        </div>-->
    </div>

    <!-- Statistics Cards -->
    <div class="stat-cards-container">
        <div class="stat-card users">
            <div class="stat-icon users-icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-text">
                <div class="stat-number">@Model.TotalUsers</div>
                <div class="stat-label">Total Users</div>
                <div class="stat-trend trend-up">
                    <i class="fas fa-arrow-up"></i>
                    <span>12% this month</span>
                </div>
            </div>
        </div>
        <div class="stat-card issues">
            <div class="stat-icon issues-icon">
                <i class="fas fa-exclamation-circle"></i>
            </div>
            <div class="stat-text">
                <div class="stat-number">@Model.ActiveIssues</div>
                <div class="stat-label">Active Issues</div>
                <div class="stat-trend trend-down">
                    <i class="fas fa-arrow-down"></i>
                    <span>5% this week</span>
                </div>
            </div>
        </div>
        <div class="stat-card documents">
            <div class="stat-icon documents-icon">
                <i class="fas fa-file-alt"></i>
            </div>
            <div class="stat-text">
                <div class="stat-number">@Model.TotalDocuments</div>
                <div class="stat-label">Documents</div>
                <div class="stat-trend trend-up">
                    <i class="fas fa-arrow-up"></i>
                    <span>8% this month</span>
                </div>
            </div>
        </div>
    </div>

    <!--Community Forum Section-->
    <div class="recent-activity">
        <h2>Community Forum</h2>

        <!-- Create New Post Button -->
        <div class="text-end mb-3">
            <a asp-controller="Post" asp-action="Create" class="btn"
               style="background-color: var(--primary-color); color: white; border-radius: var(--border-radius);
                  padding: 8px 16px; transition: var(--transition);">
                <i class="fas fa-plus-circle"></i> Create New Post
            </a>
        </div>

        <div class="forum-posts">
            @foreach (var post in Model.Posts)
            {
                <div class="activity-item forum-post">
                    <div class="post-content">
                        <!-- Post Title -->
                        <h4>
                            <a asp-controller="Post" asp-action="Details" asp-route-id="@post.PostId"
                               style="text-decoration: none; color: var(--text-color); font-weight: 600; transition: var(--transition);">
                                @post.Title
                            </a>
                        </h4>

                        <!-- Post Image -->
                        @if (post.Image != null)
                        {
                            <div class="post-image" style="margin: 10px 0;">
                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(post.Image)"
                                     alt="Post Image"
                                     style="max-width: 150px; max-height: 150px; border-radius: 8px; object-fit: cover;" />
                            </div>
                        }

                        <!-- Post Content Preview -->
                        <p class="post-preview" style="color: #666; margin: 10px 0;">
                            @if (post.Content.Length > 200)
                            {
                                @(post.Content.Substring(0, 200))
                                <span>...</span>
                                <a asp-action="Details" asp-route-id="@post.PostId"
                                   style="color: var(--primary-color); font-weight: 500;">Read More</a>
                            }
                            else
                            {
                                @post.Content
                            }
                        </p>

                        <!-- Post Metadata -->
                        <div class="activity-meta">
                            <span class="activity-user">
                                <i class="fas fa-user"></i> @post.ApplicationUser.FirstName @post.ApplicationUser.LastName
                            </span>
                            <span class="activity-time">
                                <i class="fas fa-calendar"></i> @post.AddedOn.ToString("MMMM dd, yyyy")
                            </span>
                        </div>

                        <!-- Reactions and Comments -->
                        <div class="post-interactions" style="display: flex; gap: 15px; margin-top: 10px;">
                            <span style="display: flex; align-items: center; gap: 5px;">
                                <i class="fas fa-heart" style="color: var(--danger-color);"></i>
                                @post.Reactions.Count(r => r.Type == "Love")
                            </span>
                            <span style="display: flex; align-items: center; gap: 5px;">
                                <i class="fas fa-thumbs-up" style="color: var(--primary-color);"></i>
                                @post.Reactions.Count(r => r.Type == "Like")
                            </span>
                            <span style="display: flex; align-items: center; gap: 5px;">
                                <i class="fas fa-laugh" style="color: var(--warning-color);"></i>
                                @post.Reactions.Count(r => r.Type == "Haha")
                            </span>
                            <span style="display: flex; align-items: center; gap: 5px;">
                                <i class="fas fa-surprise" style="color: var(--info-color);"></i>
                                @post.Reactions.Count(r => r.Type == "Wow")
                            </span>
                            <span style="display: flex; align-items: center; gap: 5px;">
                                <i class="fas fa-sad-tear" style="color: var(--secondary-color);"></i>
                                @post.Reactions.Count(r => r.Type == "Sad")
                            </span>
                            <span style="display: flex; align-items: center; gap: 5px;">
                                <i class="fas fa-angry" style="color: #e74c3c;"></i>
                                @post.Reactions.Count(r => r.Type == "Angry")
                            </span>
                            <span style="display: flex; align-items: center; gap: 5px;">
                                <i class="fas fa-comment" style="color: var(--secondary-color);"></i>
                                @post.Comments.Count()
                            </span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>


    <!-- Recent Activity Section -->
    <div class="recent-activity">
        <h2>Recent Activity</h2>
        <div class="activity-list">
            <div class="activity-item">
                <div class="activity-icon activity-issue">
                    <i class="fas fa-exclamation-circle"></i>
                </div>
                <div class="activity-content">
                    <h4>New Issue Reported: Water Leak on Main Street</h4>
                    <div class="activity-meta">
                        <span class="activity-time">Today, 09:45 AM</span>
                        <span class="activity-user">by John Smith</span>
                    </div>
                </div>
            </div>
            <div class="activity-item">
                <div class="activity-icon activity-document">
                    <i class="fas fa-file-alt"></i>
                </div>
                <div class="activity-content">
                    <h4>New Document Uploaded: March HOA Minutes</h4>
                    <div class="activity-meta">
                        <span class="activity-time">Yesterday, 04:20 PM</span>
                        <span class="activity-user">by Admin</span>
                    </div>
                </div>
            </div>
            <div class="activity-item">
                <div class="activity-icon activity-event">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                <div class="activity-content">
                    <h4>New Event Scheduled: Community Cleanup Day</h4>
                    <div class="activity-meta">
                        <span class="activity-time">Mar 08, 10:30 AM</span>
                        <span class="activity-user">by Lisa Johnson</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    

    <!-- Quick Actions Section -->
    <div class="quick-actions">
        <h2>Quick Actions</h2>
        <div class="action-grid">
            <a href="Contact" class="action-card">
                <div class="action-icon">
                    <i class="fas fa-plus-circle"></i>
                </div>
                <h3>New Contact</h3>
                <p class="action-desc">Add a new contact to the directory</p>
            </a>
            <a href="Event" class="action-card">
                <div class="action-icon">
                    <i class="fas fa-calendar-plus"></i>
                </div>
                <h3>Schedule Event</h3>
                <p class="action-desc">Create a new community event</p>
            </a>
            <a href="Document" class="action-card">
                <div class="action-icon">
                    <i class="fas fa-file-upload"></i>
                </div>
                <h3>Upload Document</h3>
                <p class="action-desc">Share files with the community</p>
            </a>
            <a href="FeedbackComplaint" class="action-card">
                <div class="action-icon">
                    <i class="fas fa-ticket-alt"></i>
                </div>
                <h3>Report Issue</h3>
                <p class="action-desc">Submit feedback or complaint</p>
            </a>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>