    </div>

    <div class="form-group">
        <label asp-for="EmergencyContactRelation" class="control-label">Emergency Contact Relation</label>
        <input asp-for="EmergencyContactRelation" class="form-control" />
        <span asp-validation-for="EmergencyContactRelation" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
