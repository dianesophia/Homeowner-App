    </div>

    <div class="form-group form-check">
        <input asp-for="IsActiveEmployee" class="form-check-input" />
        <label asp-for="IsActiveEmployee" class="form-check-label">Active Employee</label>
    </div>

    <div class="form-group form-check">
        <input asp-for="IsAlsoHomeOwner" class="form-check-input" />
