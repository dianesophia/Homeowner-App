@using Microsoft.AspNetCore.Identity
@using Hometown_Application.Areas.Identity.Data
@inject UserManager<ApplicationUser> UserManager

@model IEnumerable<Hometown_Application.Models.FeedbackComplaintModel>

@{
    var user = await UserManager.GetUserAsync(User);
    var feedbackItems = Model?.Where(item => item.Type == "Feedback").ToList();
    var complaintItems = Model?.Where(item => item.Type == "Complaint").ToList();
}

<h1>Feedback</h1>

@if (feedbackItems.Any())
{

    <table class="table table-bordered" border="1" width="100%" cellpadding="10">
        <thead>
            <tr>
                <th>Title</th>
                <th>Message</th>
                <th>Status</th>
                <th>Submitted on</th>
                <th>Type</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in feedbackItems)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Message</td>
                    <td>@item.Status.StatusName</td>
                    <td>@item.AddedOn.ToString("MM/dd/yyyy")</td>
                    <td>@item.Type</td>
                    <td>
                        @if (item.Image != null)
                        {
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Image)" alt="Feedback Image" width="100" height="100" />
                        }
                        else
                        {
                            <span>No Image</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No feedback available.</p>
}



