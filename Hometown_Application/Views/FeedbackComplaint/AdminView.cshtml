@model List<Hometown_Application.Models.FeedbackComplaintModel>
@using Hometown_Application.Models


<h1 class="text-center mb-4">Feedback & Complaints Management</h1>

<div class="container">
    <!-- Tabs -->
    <ul class="nav nav-tabs mb-3" id="feedbackTabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="active-tab" data-bs-toggle="tab" href="#active" role="tab">Active</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="resolved-tab" data-bs-toggle="tab" href="#resolved" role="tab">Resolved</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="canceled-tab" data-bs-toggle="tab" href="#canceled" role="tab">Canceled</a>
        </li>
    </ul>

    <div class="tab-content" id="feedbackTabContent">
        <!-- Active Feedback & Complaints -->
        <div class="tab-pane fade show active" id="active" role="tabpanel">
            <div class="row">
                <div class="col-md-6">
                    <h2 class="text-primary">Feedback</h2>
                    @foreach (var item in Model.Where(f => f.Type == "Feedback" && f.Status?.StatusName != "Resolved" && f.Status?.StatusName != "Canceled"))
                    {
                        <div class="card mb-3 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">Feedback Details</h5>
                                <p><strong>User:</strong> @(item.ApplicationUser != null ? $"{item.ApplicationUser.FirstName} {item.ApplicationUser.LastName}" : "Unknown")</p>
                                <p><strong>Status:</strong> @item.Status?.StatusName</p>
                                <p><strong>Message:</strong> @item.Message</p>

                                @if (!string.IsNullOrEmpty(item.AdminReply))
                                {
                                    <p class="text-success"><strong>Admin Response:</strong> @item.AdminReply</p>
                                }

                                @if (!string.IsNullOrEmpty(item.AdminNote))
                                {
                                    <p class="text-muted"><strong>Admin Note:</strong> @item.AdminNote</p>
                                }

                                <div class="d-flex gap-2">
                                    <!-- Button to Open Modal for Reply -->
                                    <button class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#replyModal-@item.FeedbackComplaintId">
                                        Reply
                                    </button>

                                    <!-- Button to Open Modal for Adding Notes -->
                                    <button class="btn btn-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#noteModal-@item.FeedbackComplaintId">
                                        Add Note
                                    </button>

                                    <!-- Update Status Form -->
                                    <form asp-controller="FeedbackComplaint" asp-action="UpdateStatus" method="post">
                                        <input type="hidden" name="id" value="@item.FeedbackComplaintId" />
                                        <select name="status" class="form-select form-select-sm d-inline w-auto" required>
                                            <option value="Resolved">Resolved</option>
                                            <option value="Canceled">Canceled</option>
                                        </select>
                                        <button type="submit" class="btn btn-primary btn-sm">Update</button>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <!-- Reply Modal -->
                        <div class="modal fade" id="replyModal-@item.FeedbackComplaintId" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Reply to Feedback</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <form asp-controller="FeedbackComplaint" asp-action="ReplyToFeedback" method="post">
                                            <input type="hidden" name="id" value="@item.FeedbackComplaintId" />
                                            <textarea name="replyMessage" class="form-control" placeholder="Write a reply..." required></textarea>
                                            <button type="submit" class="btn btn-success mt-2 w-100">Submit Reply</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Note Modal -->
                        <div class="modal fade" id="noteModal-@item.FeedbackComplaintId" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Add Note</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <form asp-controller="FeedbackComplaint" asp-action="AddNote" method="post">
                                            <input type="hidden" name="id" value="@item.FeedbackComplaintId" />
                                            <textarea name="note" class="form-control" placeholder="Write a note..." required></textarea>
                                            <button type="submit" class="btn btn-secondary mt-2 w-100">Save Note</button>
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="col-md-6">
                    <h2 class="text-danger">Complaints</h2>
                    @foreach (var item in Model.Where(f => f.Type == "Complaint" && f.Status?.StatusName != "Resolved" && f.Status?.StatusName != "Canceled"))
                    {
                        <div class="card mb-3 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">Complaint Details</h5>
                                <p><strong>User:</strong> @(item.ApplicationUser != null ? $"{item.ApplicationUser.FirstName} {item.ApplicationUser.LastName}" : "Unknown")</p>
                                <p><strong>Status:</strong> @item.Status?.StatusName</p>
                                <p><strong>Message:</strong> @item.Message</p>

                                @if (!string.IsNullOrEmpty(item.AdminReply))
                                {
                                    <p class="text-success"><strong>Admin Response:</strong> @item.AdminReply</p>
                                }
                                @if (!string.IsNullOrEmpty(item.AdminNote))
                                {
                                    <p class="text-success"><strong>Admin Note:</strong> @item.AdminNote</p>
                                }


                                <div class="d-flex gap-2">
                                    <button class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#replyModal-@item.FeedbackComplaintId">
                                        Reply
                                    </button>
                                    <button class="btn btn-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#noteModal-@item.FeedbackComplaintId">
                                        Add Note
                                    </button>
                                    <form asp-controller="FeedbackComplaint" asp-action="UpdateStatus" method="post">
                                        <input type="hidden" name="id" value="@item.FeedbackComplaintId" />
                                        <select name="status" class="form-select form-select-sm d-inline w-auto" required>
                                            @foreach (var status in ViewBag.Statuses as List<Status>)
                                            {
                                                <option value="@status.StatusId">@status.StatusName</option>
                                            }
                                        </select>
                                        <button type="submit" class="btn btn-primary btn-sm">Update</button>
                                    </form>

                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Resolved -->
        <div class="tab-pane fade" id="resolved" role="tabpanel">
            <h2 class="text-success">Resolved Feedback & Complaints</h2>
            @* Resolved Items Here *@
        </div>

        <!-- Canceled -->
        <div class="tab-pane fade" id="canceled" role="tabpanel">
            <h2 class="text-danger">Canceled Feedback & Complaints</h2>
            @* Canceled Items Here *@
        </div>
    </div>
</div>
