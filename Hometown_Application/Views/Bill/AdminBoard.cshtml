<h1 class="mb-4 fw-bold">Admin Billing Dashboard</h1>

<div class="d-flex flex-column flex-md-row gap-3 mb-4">
    <a asp-controller="Bill" asp-action="AssignAutomaticBills" class="btn btn-primary d-flex align-items-center gap-2">
        <i class="fas fa-tasks"></i> Assign Automatic Bills
    </a>
    <a asp-controller="Bill" asp-action="PendingPayments" class="btn btn-outline-primary d-flex align-items-center gap-2">
        <i class="fas fa-plus-circle"></i> Pending Payments
    </a>
    <a asp-controller="Bill" asp-action="AssignUserBill" class="btn btn-outline-primary d-flex align-items-center gap-2">
        <i class="fas fa-plus-circle"></i> Create Custom Bill
    </a>
</div>

<div class="container">
    <!-- Summary Cards -->
    <div class="row mb-5">
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-primary">Estimated Monthly Collection</h5>
                    <p class="card-text fs-4 fw-semibold">@ViewBag.TotalMonthlyBills.ToString("C")</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-success">Fully Paid Users (This Month)</h5>
                    <p class="card-text fs-4 fw-semibold">@ViewBag.FullyPaidUserCount users</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-info">Total Collected (This Month)</h5>
                    <p class="card-text fs-4 fw-semibold">@ViewBag.TotalCollectedThisMonth.ToString("C")</p>
                </div>
            </div>
        </div>
    </div>

    <!-- 🔹 Tab Navigation -->
    <ul class="nav nav-tabs mb-4" id="billTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button" role="tab">All Bills</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="fullyPaid-tab" data-bs-toggle="tab" data-bs-target="#fullyPaid" type="button" role="tab">Fully Paid</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="overdue-tab" data-bs-toggle="tab" data-bs-target="#overdue" type="button" role="tab">Overdue</button>
        </li>
    </ul>

    <!-- 🔹 Tab Content -->
    <div class="tab-content" id="billTabsContent">
        <!-- All Bills Tab -->
        <div class="tab-pane fade show active" id="all" role="tabpanel" aria-labelledby="all-tab">
            <div class="mb-3">
                <input type="text" id="billSearch" class="form-control" placeholder="Search by User, Bill ID, or Remarks...">
            </div>
            <div class="table-responsive">
                <table class="table table-hover table-bordered" id="billTable">
                    <thead class="table-primary text-center">
                        <tr>
                            <th>Bill ID</th>
                            <th>User</th>
                            <th>Issue Date</th>
                            <th>Due Date</th>
                            <th>Total Amount</th>
                            <th>Remaining Balance</th>
                            <th>Remarks</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var bill in ViewBag.BillList as List<Hometown_Application.Models.BillModel>)
                        {
                            <tr class="text-center align-middle">
                                <td>@bill.BillId</td>
                                <td>@bill.ApplicationUser?.UserName</td>
                                <td>@bill.IssueDate.ToString("MM/dd/yyyy")</td>
                                <td>@bill.DueDate.ToString("MM/dd/yyyy")</td>
                                <td>@bill.TotalAmount.ToString("C")</td>
                                <td>@bill.RemainingBalance.ToString("C")</td>
                                <td>@bill.Remarks</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Fully Paid Tab -->
        <div class="tab-pane fade" id="fullyPaid" role="tabpanel" aria-labelledby="fullyPaid-tab">
            <div class="table-responsive">
                <table class="table table-hover table-bordered">
                    <thead class="table-success text-center">
                        <tr>
                            <th>Bill ID</th>
                            <th>User</th>
                            <th>Issue Date</th>
                            <th>Due Date</th>
                            <th>Total Amount</th>
                            <th>Remaining Balance</th>
                            <th>Remarks</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var hasFullyPaid = false;
                            foreach (var bill in ViewBag.BillList as List<Hometown_Application.Models.BillModel>)
                            {
                                if (bill.RemainingBalance == 0)
                                {
                                    hasFullyPaid = true;
                                    <tr class="text-center align-middle">
                                        <td>@bill.BillId</td>
                                        <td>@bill.ApplicationUser?.UserName</td>
                                        <td>@bill.IssueDate.ToString("MM/dd/yyyy")</td>
                                        <td>@bill.DueDate.ToString("MM/dd/yyyy")</td>
                                        <td>@bill.TotalAmount.ToString("C")</td>
                                        <td>@bill.RemainingBalance.ToString("C")</td>
                                        <td>@bill.Remarks</td>
                                    </tr>
                                }
                            }

                            if (!hasFullyPaid)
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted">No homeowner fully paid</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Overdue Tab -->
        <div class="tab-pane fade" id="overdue" role="tabpanel" aria-labelledby="overdue-tab">
            <div class="table-responsive">
                <table class="table table-hover table-bordered">
                    <thead class="table-danger text-center">
                        <tr>
                            <th>Bill ID</th>
                            <th>User</th>
                            <th>Issue Date</th>
                            <th>Due Date</th>
                            <th>Total Amount</th>
                            <th>Remaining Balance</th>
                            <th>Remarks</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var hasOverdue = false;
                            foreach (var bill in ViewBag.BillList as List<Hometown_Application.Models.BillModel>)
                            {
                                if (bill.RemainingBalance > 0 && bill.DueDate < DateTime.Now)
                                {
                                    hasOverdue = true;
                                    <tr class="text-center align-middle">
                                        <td>@bill.BillId</td>
                                        <td>@bill.ApplicationUser?.UserName</td>
                                        <td>@bill.IssueDate.ToString("MM/dd/yyyy")</td>
                                        <td>@bill.DueDate.ToString("MM/dd/yyyy")</td>
                                        <td>@bill.TotalAmount.ToString("C")</td>
                                        <td>@bill.RemainingBalance.ToString("C")</td>
                                        <td>@bill.Remarks</td>
                                    </tr>
                                }
                            }

                            if (!hasOverdue)
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted">No homeowner overdue</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- JavaScript for Search -->
@section Scripts {
    <script>
        document.getElementById("billSearch").addEventListener("keyup", function () {
            const query = this.value.toLowerCase();
            const rows = document.querySelectorAll("#billTable tbody tr");

            rows.forEach(row => {
                const text = row.innerText.toLowerCase();
                row.style.display = text.includes(query) ? "" : "none";
            });
        });
    </script>
}
