<h1 class="mb-4 fw-bold">Admin Billing Dashboard</h1>

<div class="d-flex flex-column flex-md-row gap-3 mb-4">
    <a asp-controller="Bill" asp-action="AssignAutomaticBills" class="btn btn-primary d-flex align-items-center gap-2">
        <i class="fas fa-tasks"></i> Assign Automatic Bills
    </a>
    <a asp-controller="Bill" asp-action="AssignUserBill" class="btn btn-outline-primary d-flex align-items-center gap-2">
        <i class="fas fa-plus-circle"></i> Create Custom Bill
    </a>
</div>

<div class="container">
    <!-- Row for the summary card -->
    <div class="row mb-5">
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-primary">Estimated Monthly Collection</h5>
                    <p class="card-text fs-4 fw-semibold">
                        @ViewBag.TotalMonthlyBills.ToString("C")
                    </p>
                </div>
            </div>
        </div>

        <!-- 🔹 Fully Paid Users Card -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-success">Fully Paid Users (This Month)</h5>
                    <p class="card-text fs-4 fw-semibold">
                        @ViewBag.FullyPaidUserCount users
                    </p>
                </div>
            </div>
        </div>
        <!-- 🔹 Total Collected This Month Card -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-info">Total Collected (This Month)</h5>
                    <p class="card-text fs-4 fw-semibold">
                        @ViewBag.TotalCollectedThisMonth.ToString("C")
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Bill Table -->
    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead class="table-primary">
                <tr class="text-center">
                    <th>Bill ID</th>
                    <th>User</th>
                    <th>Issue Date</th>
                    <th>Due Date</th>
                    <th>Total Amount</th>
                    <th>Remaining Balance</th>
                    <th>Remarks</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bill in ViewBag.BillList as List<Hometown_Application.Models.BillModel>)
                {
                    <tr class="text-center align-middle">
                        <td>@bill.BillId</td>
                        <td>@bill.ApplicationUser?.UserName</td>
                        <td>@bill.IssueDate.ToString("MM/dd/yyyy")</td>
                        <td>@bill.DueDate.ToString("MM/dd/yyyy")</td>
                        <td>@bill.TotalAmount.ToString("C")</td>
                        <td>@bill.RemainingBalance.ToString("C")</td>
                        <td>@bill.Remarks</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
