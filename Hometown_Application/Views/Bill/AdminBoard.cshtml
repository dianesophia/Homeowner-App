<h1>Admin Billing Dashboard</h1>

<div class="accordion-button mb-4">
    <a asp-controller="Bill" asp-action="AssignAutomaticBills" class="action-button">
        <i class="fas fa-user-cog"></i> Assign Custom Bill to User
    </a>
</div>

<div class="container mt-5">
    <!-- Flex row for cards -->
    <div class="d-flex flex-wrap gap-4 mb-5">
        <!-- Card for Total Monthly Bills -->
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Total Monthly Bills</h5>
                <p class="card-text">
                    @ViewBag.TotalMonthlyBills.ToString("C")
                </p>
            </div>
        </div>

        <!-- Card for Total Yearly Bills -->
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Total Yearly Bills</h5>
                <p class="card-text">
                    @ViewBag.TotalYearlyBills.ToString("C")
                </p>
            </div>
        </div>

        <!-- Card for Total Quarterly Bills -->
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Total Quarterly Bills</h5>
                <p class="card-text">
                    @ViewBag.TotalQuarterlyBills.ToString("C")
                </p>
            </div>
        </div>
    </div>

    <!-- Table for BillModel -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Bill ID</th>
                    <th>User</th>
                    <th>Issued Date</th>
                    <th>Due Date</th>
                    <th>Total Amount</th>
                    <th>Remaining Balance</th>
                    <th>Status</th>
                    <th>Remarks</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bill in ViewBag.BillList as List<Hometown_Application.Models.BillModel>)
                {
                    <tr>
                        <td>@bill.BillId</td>
                        <td>@bill.ApplicationUser?.UserName</td>
                        <td>@bill.IssueDate.ToString("MM/dd/yyyy")</td>
                        <td>@bill.DueDate.ToString("MM/dd/yyyy")</td>
                        <td>@bill.TotalAmount.ToString("C")</td>
                        <td>@bill.RemainingBalance.ToString("C")</td>
                        <td>@bill.Status</td>
                        <td>@bill.Remarks</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
