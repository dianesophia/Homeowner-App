<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homeowner Board</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f7fc;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            padding: 20px;
            background-color: #007BFF;
            color: white;
            margin: 0;
        }

        .dashboard {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            padding: 20px;
        }

        .card {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            transition: transform 0.3s;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        h3 {
            margin-bottom: 10px;
            font-size: 1.2rem;
            color: #333;
        }

        p, ul {
            margin: 0;
            color: #555;
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

        li {
            margin-bottom: 10px;
        }

        .table-container {
            overflow-x: auto;
            margin-top: 15px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #007BFF;
            color: white;
        }

        td {
            background-color: #f9f9f9;
        }

        .chart {
            height: 300px; /* Adjusted height */
            background-color: #e0e0e0;
            border-radius: 8px;
            margin-top: 15px;
        }
    </style>
</head>
<body>

    <h1>Homeowner Board</h1>

    <div class="dashboard">
        <!-- Total Outstanding Balance -->
        <div class="card">
            <h3>Total Outstanding Balance</h3>
            <p>$500.00</p>
        </div>

        <!-- Upcoming Bills -->
        <div class="card">
            <h3>Upcoming Bills</h3>
            <ul>
                <li>Electric Bill - Due: 25th April</li>
                <li>Water Bill - Due: 30th April</li>
                <li>Mortgage Payment - Due: 5th May</li>
            </ul>
        </div>

        <!-- Recent Payments (Updated to table) -->
        <div class="card">
            <h3>Recent Payments</h3>
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Bill</th>
                            <th>Amount Paid</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Electric Bill</td>
                            <td>$100</td>
                            <td>10th April</td>
                        </tr>
                        <tr>
                            <td>Water Bill</td>
                            <td>$50</td>
                            <td>15th April</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Financial Overview with Chart -->
        <div class="card">
            <h3>Financial Overview</h3>
            <p>Monthly Budget: $1,500</p>
            <canvas id="financialChart" class="chart"></canvas> <!-- Chart canvas inside this section -->
        </div>
    </div>

    <script>
        var ctx = document.getElementById('financialChart').getContext('2d');
        var financialChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: ['Rent', 'Utilities', 'Savings', 'Others'],
                datasets: [{
                    label: 'Monthly Budget Distribution',
                    data: [500, 300, 200, 500],  // Example data for Rent, Utilities, Savings, and Others
                    backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0'],
                    hoverOffset: 4
                }]
            }
        });
    </script>

</body>
</html>
