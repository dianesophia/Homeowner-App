@model List<Hometown_Application.Models.BillPaymentModel>

<h2>Your Payment History</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Payment ID</th>
            <th>Payment Date</th>
            <th>Amount Paid</th>
            <th>Payment Method</th>
            <th>Reference Number</th> <!-- Add this to display ReferenceNumber -->
        </tr>
    </thead>
    <tbody>
        @foreach (var payment in Model)
        {
            <tr>
                <td>@payment.PaymentId</td>
                <td>@payment.PaymentDate.ToShortDateString()</td>
                <td>@payment.AmountPaid.ToString("C")</td>
                <td>@payment.PaymentMethod</td>
                <td>@payment.ReferenceNumber</td> <!-- Display the ReferenceNumber -->
            </tr>
        }
    </tbody>
</table>
