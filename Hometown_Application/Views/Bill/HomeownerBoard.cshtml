@model List<Hometown_Application.ViewModel.HomeownerBoardViewModel>

@{
    ViewData["Title"] = "Homeowner Dashboard";
}

<h2>Homeowner Dashboard</h2>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-warning">
        @ViewData["Message"]
    </div>
}

<div class="row">
    @foreach (var item in Model)
    {
        <!-- Only render the Bill Summary Card if the Remaining Balance is greater than 0 -->
        @if (item.RemainingBalance > 0)
        {
            <div class="col-md-6 mb-4">
                <!-- Bill Summary Card -->
                <div class="card shadow-sm mb-3">
                    <div class="card-header bg-primary text-white">
                        <h5>Bill ID: @item.BillId</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Remaining Balance:</strong> @item.RemainingBalance.ToString("C")</p>
                        <p><strong>Status:</strong> @item.Status</p>
                        <a asp-action="PayBill" asp-controller="Bill" asp-route-billId="@item.BillId" class="btn btn-success">
                            Pay Now
                        </a>
                    </div>
                </div>

                <!-- Bill Details Card -->
                <div class="card shadow-sm">
                    <div class="card-header bg-info text-white">
                        <h5>@item.BillName</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Amount:</strong> @item.Amount.ToString("C")</p>
                        <p><strong>Description:</strong> @item.Description</p>
                        <p><strong>Due Date:</strong> @item.DueDate.ToString("MM/dd/yyyy")</p>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Show a message for paid bills -->
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm mb-3">
                    <div class="card-header bg-success text-white">
                        <h5>Bill ID: @item.BillId</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Status:</strong> Paid</p>
                        <p><strong>Amount Paid:</strong> @item.Amount.ToString("C")</p>
                        <p><strong>Payment Date:</strong> @item.PaymentDate.ToString("MM/dd/yyyy")</p>
                    </div>
                </div>
            </div>
        }
    }
</div>

<hr />

<h3>Payment History</h3>

<!-- Tabs for approved and pending payments -->
<ul class="nav nav-tabs" id="paymentTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="approved-tab" data-bs-toggle="tab" href="#approved" role="tab" aria-controls="approved" aria-selected="true">Approved Payments</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="pending-tab" data-bs-toggle="tab" href="#pending" role="tab" aria-controls="pending" aria-selected="false">Pending Payments</a>
    </li>
</ul>

<div class="tab-content" id="paymentTabsContent">
    <!-- Approved Payments Tab -->
    <div class="tab-pane fade show active" id="approved" role="tabpanel" aria-labelledby="approved-tab">
        @if (Model.Any(p => p.PaymentId != 0 && p.IsApproved))
        {
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Payment ID</th>
                        <th>Payment Date</th>
                        <th>Amount Paid</th>
                        <th>Payment Method</th>
                        <th>Reference Number</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var payment in Model.Where(p => p.PaymentId != 0 && p.IsApproved))
                    {
                        <tr>
                            <td>@payment.PaymentId</td>
                            <td>@payment.PaymentDate.ToShortDateString()</td>
                            <td>@payment.AmountPaid.ToString("C")</td>
                            <td>@payment.PaymentMethod</td>
                            <td>@payment.ReferenceNumber</td>
                            <td>
                                <a asp-controller="Bill"
                                   asp-action="DownloadConfirmationSlip"
                                   asp-route-paymentId="@payment.PaymentId"
                                   class="btn btn-sm btn-outline-primary"
                                   target="_blank">
                                    Download Confirmation Slip
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        }
        else
        {
            <p class="text-muted">No approved payments available.</p>
        }
    </div>

    <!-- Pending Payments Tab -->
    <div class="tab-pane fade" id="pending" role="tabpanel" aria-labelledby="pending-tab">
        @if (Model.Any(p => p.PaymentId != 0 && !p.IsApproved))
        {
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Payment ID</th>
                        <th>Payment Date</th>
                        <th>Amount Paid</th>
                        <th>Payment Method</th>
                        <th>Reference Number</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var payment in Model.Where(p => p.PaymentId != 0 && !p.IsApproved))
                    {
                        <tr>
                            <td>@payment.PaymentId</td>
                            <td>@payment.PaymentDate.ToShortDateString()</td>
                            <td>@payment.AmountPaid.ToString("C")</td>
                            <td>@payment.PaymentMethod</td>
                            <td>@payment.ReferenceNumber</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">No pending payments available.</p>
        }
    </div>
</div>
