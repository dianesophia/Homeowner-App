@{
	ViewData["Title"] = "Home Page";
	ViewData["HideSidebar"] = true;
}
<style>
			:root {
					--primary-color: #6F754E;
					--secondary-color: #A08D67;
					--background-color: #E6DDC4;
					--text-color: #2F3A31;
					--card-bg: #FFFFFF;
					--border-radius: 16px;
					--shadow: 0px 6px 12px rgba(0, 0, 0, 0.1);

	}

			body {
					padding-top: 70px;
					background-color: var(--background-color);
					color: var(--text-color);
					font-family: 'Marcellus', serif;
					min-height: 100vh;
					width: 100%;
					margin: 0;
					padding: 0;

	}

			.navbar {
					position: fixed;
					top: 0;
					left: 0;
					width: 100%;
					background-color: var(--primary-color);
					box-shadow: var(--shadow);
					z-index: 1000;
					min-height: 100px;
					padding: 15px 20px;

	}

			.navbar-brand {
					font-size: 1.2rem;
					font-weight: normal;
					color: white;
					padding-left:12px;

	}

			.hero-section {
					padding-top: 50px;
					position: relative;
					height: 70vh;
					overflow: hidden;
					display: flex;
					align-items: center;
					justify-content: center;
					background: rgba(0, 0, 0, 0.5); /* Adjust transparency here */

	}


			.hero-image {
					position: absolute;
					width: 100%;
					height: 100%;
					object-fit: cover;
					filter: brightness(0.7);

	}

			.hero-content {
					position: relative;
					z-index: 2;
					text-align: center;
					color: white;
					max-width: 800px;

	}

			.features-section {
					padding: 3rem 50px;

	}

			.feature-card {
					background: var(--card-bg);
					border-radius: var(--border-radius);
					padding: 2rem;
					margin-bottom: 2rem;
					text-align: center;
					transition: transform 0.3s ease;
					box-shadow: var(--shadow);
					height: 100%;

	}

				.feature-card:hover {
						transform: translateY(-5px);

	}

			.feature-icon {
					font-size: 2.5rem;
					color: var(--primary-color);
					margin-bottom: 1rem;

	}

			.feature-image {
					width: 100%;
					height: 200px;
					object-fit: cover;
					border-radius: var(--border-radius);
					margin-bottom: 1.5rem;

	}

			.btn-login {
					background-color: var(--secondary-color);
					color: white;
					padding: 0.8rem 2.5rem;
					border-radius: var(--border-radius);
					font-size: 1.1rem;
					transition: all 0.3s ease;
					text-decoration: none;
					display: inline-block;
					border: none;

	}

				.btn-login:hover {
						background-color: var(--primary-color);
						transform: translateY(-2px);
						box-shadow: var(--shadow);
						color: white;

	}

			.gallery-section {
					padding: 2rem 50px;
					background: #6F754E;

	}

			.gallery-title {
					text-align: center;
					color: white;
					margin-bottom: 3rem;

	}

			.gallery-image {
					width: 100%;
					height: 300px;
					object-fit: cover;
					border-radius: var(--border-radius);
					margin-bottom: 2rem;
					transition: transform 0.3s ease;

	}

				.gallery-image:hover {
						transform: scale(1.05);

	}

			.amenities-section {
					padding: 4rem 50px;
					background-color: rgba(111, 117, 78, 0.1);
					margin-bottom: 4rem;

	}

			.section-title {
					text-align: center;
					color: var(--primary-color);
					margin-bottom: 3rem;

	}

			.location-section {
					padding: 4rem 0;
					background-color: white;

	}

			.location-card {
					background: var(--card-bg);
					border-radius: var(--border-radius);
					padding: 2rem;
					box-shadow: var(--shadow);
					margin-bottom: 2rem;

	}

			.container, .container-fluid {
					width: 100%;
					max-width: 100%;
					padding: 0;
					margin: 0;

	}


</style>
