@model Hometown_Application.Models.ContactModel

@{
    ViewData["Title"] = Model.Id == 0 ? "Add Contact" : "Edit Contact";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>User ID</label>
        <input asp-for="UserId" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Contact Type</label>
        <input asp-for="ContactType" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Number</label>
        <input asp-for="Number" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
