@model Hometown_Application.ViewModel.PaymentViewModel

@{
    ViewData["Title"] = "Make a Payment";
}

<h2>Make a Payment</h2>

<form asp-action="Pay" method="post">
    <input type="hidden" asp-for="BillId" />

    <div class="form-group">
        <label asp-for="AmountPaid"></label>
        <input asp-for="AmountPaid" class="form-control" />
        <span asp-validation-for="AmountPaid" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PaymentMethod"></label>
        <input asp-for="PaymentMethod" class="form-control" />
        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ReferenceNumber"></label>
        <input asp-for="ReferenceNumber" class="form-control" />
        <span asp-validation-for="ReferenceNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Remaining Balance</label>
        <input value="@Model.RemainingBalance.ToString("C")" class="form-control" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Submit Payment</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
