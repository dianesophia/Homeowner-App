@model List<Hometown_Application.Models.BillModel>

<h2>My Bills</h2>
<table class="table">
    <thead>
        <tr>
            <th>Billing Period</th>
            <th>Due Date</th>
            <th>Total Amount</th>
            <th>Balance</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bill in Model)
        {
            <tr>
                <td>@bill.BillingPeriod</td>
                <td>@bill.DueDate.ToShortDateString()</td>
                <td>@bill.TotalAmount.ToString("C")</td>
                <td>@bill.BalanceAmount.ToString("C")</td>
                <td>
                    <span class="badge @(bill.Status == "Paid" ? "bg-success" : "bg-warning")">@bill.Status</span>
                </td>
                <td>
                    @if (bill.Status != "Paid")
                    {
                        <a href="@Url.Action("Pay", "Billing", new { id = bill.BillId })" class="btn btn-primary">Pay Now</a>
                    }
                    else
                    {
                        <span class="text-success">Paid</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
