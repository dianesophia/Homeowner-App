@model IEnumerable<Hometown_Application.Models.BillModel>

@{
    ViewData["Title"] = "Billing Overview";
}

<h2>Billing Overview</h2>

<table class="table">
    <thead>
        <tr>
            <th>Bill ID</th>
            <th>Homeowner</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Issue Date</th>
            <th>Due Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bill in Model)
        {
            <tr>
                <td>@bill.BillId</td>
                <td>@bill.ApplicationUser.UserName</td>
                <td>@bill.TotalAmount.ToString("C")</td>
                <td>@bill.Status</td>
                <td>@bill.IssueDate.ToShortDateString()</td>
                <td>@bill.DueDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@bill.BillId">View Details</a> |
                    <a asp-action="Pay" asp-route-id="@bill.BillId">Make Payment</a>
                </td>
            </tr>
        }
    </tbody>
</table>
