@model IEnumerable<BillModel>

<h2>Your Bills</h2>

<table class="table">
    <thead>
        <tr>
            <th>Billing Period</th>
            <th>Total Amount</th>
            <th>Due Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bill in Model)
        {
            <tr>
                <td>@bill.BillingPeriod</td>
                <td>@bill.TotalAmount.ToString("C")</td>
                <td>@bill.DueDate.ToShortDateString()</td>
                <td>@bill.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@bill.BillId">View</a> |
                    @if (bill.Status == "Pending")
                    {
                        <a asp-action="Pay" asp-route-id="@bill.BillId">Pay</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
