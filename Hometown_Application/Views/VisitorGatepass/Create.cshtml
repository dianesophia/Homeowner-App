@model Hometown_Application.Models.VisitorGatepassModel

@{
    ViewData["Title"] = "Create Visitor Gatepass";
}

<h2>Create Visitor Gatepass</h2>

<form asp-action="Create" method="post">

    <div class="form-group">
        <label asp-for="VisitorName" class="control-label"></label>
        <input asp-for="VisitorName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Purpose" class="control-label"></label>
        <textarea asp-for="Purpose" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="VisitDate" class="control-label"></label>
        <input asp-for="VisitDate" type="date" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="ExpectedArrivalTime" class="control-label"></label>
        <input asp-for="ExpectedArrivalTime" type="time" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NumberOfVisitors" class="control-label"></label>
        <input asp-for="NumberOfVisitors" type="number" class="form-control" />
    </div>

    <!-- Vehicle Details Section -->
    <h4>Vehicle Details</h4>
    <div class="form-group">
        <label asp-for="VehicleType" class="control-label">Vehicle Type</label>
        <select asp-for="VehicleType" class="form-control">
            <option value="">Select Vehicle Type</option>
            <option value="Car">Car</option>
            <option value="Motorcycle">Motorcycle</option>
            <option value="Truck">Truck</option>
            <option value="Other">Other</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="VehiclePlateNumber" class="control-label">Vehicle Plate Number</label>
        <input asp-for="VehiclePlateNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="VehicleColor" class="control-label">Vehicle Color</label>
        <input asp-for="VehicleColor" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ContactNumber" class="control-label"></label>
        <input asp-for="ContactNumber" class="form-control" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

<p>
    <a asp-action="Index">Back to List</a>
</p>
