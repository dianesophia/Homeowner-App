@model Hometown_Application.Models.VisitorGatepassModel

@{
    ViewData["Title"] = "Edit Visitor Gatepass";
}

<h2>Edit Visitor Gatepass</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="VisitorId" />

    <div class="form-group">
        <label asp-for="VisitorName"></label>
        <input asp-for="VisitorName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Purpose"></label>
        <input asp-for="Purpose" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="VisitDate"></label>
        <input asp-for="VisitDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="NumberOfVisitors"></label>
        <input asp-for="NumberOfVisitors" type="number" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ContactNumber"></label>
        <input asp-for="ContactNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ApprovalStatus"></label>
        <select asp-for="ApprovalStatus" class="form-control">
            <option value="Pending">Pending</option>
            <option value="Approved">Approved</option>
            <option value="Rejected">Rejected</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
